<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>matcha</title>
    <link rel="stylesheet" href="stylesheets/style.css" />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
      integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
      crossorigin="anonymous"
    />
  </head>

  <body>
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
      <a href="" class="navbar-brand">matcha</a>
      <button
        class="navbar-toggler"
        data-toggle="collapse"
        data-target="#navbarMaleu"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <ul class="navbar-nav ml-auto">
        <li class="nav-item">
          <a href="http://localhost:3000/logout"
            ><button
              type="button"
              class="btn btn-outline-primary"
              data-toggle="modal"
              data-target="#Modal"
            >
              logout
            </button></a
          >
        </li>
      </ul>
    </nav>
    <%if(message.length > 0) {%>
    <div class="alert alert-danger" role="alert">
      <%= message %>
    </div>
    <%}%>
    <div class="container mt-5">
      <div class="row justify-content-center">
        <div class="col-lg-12">
          <div class="card bg-dark text-white">
            <div class="card-body">
              <h5 class="card-title">Complete this form to continue</h5>
              <form
                method="POST"
                action="/profile"
                enctype="multipart/form-data"
              >
                <div class="form-row">
                  <div class="form-group col-md-6">
                    <label class="mr-sm-2" for="gender">gender</label>
                    <select class="custom-select mr-sm-2" name="gender">
                      <option selected>Choose...</option>
                      <option value="Male" name="Male">Male</option>
                      <option value="Female" name="Female">Female</option>
                      <option value="Bisexual" name="Bisexual">Bisexual</option>
                    </select>
                  </div>
                  <div class="form-group col-md-6">
                    <label class="mr-sm-2" for="Preference">Preference</label>
                    <select
                      class="custom-select mr-sm-2"
                      name="SelectPreference"
                    >
                      <option selected>Choose...</option>
                      <option value="Male" name="Male">Male</option>
                      <option value="Female" name="Female">Female</option>
                      <option value="Bisexual" name="Bisexual">Bisexual</option>
                    </select>
                  </div>
                  <div class="form-group col-md-6">
                    <label for="Age">age</label>
                    <input
                      type="number"
                      class="form-control"
                      name="age"
                      placeholder="enter age"
                    />
                  </div>
                </div>
                <label class="mr-sm-2" for="Preference">interests</label>
                <div class="form-group">
                  <label>interets should start with a hashtag e.g #chess</label>
                  <textarea
                    class="form-control"
                    name="interests"
                    id="interests"
                    rows="4"
                  ></textarea>
                </div>
                <br />
                <div class="form-group">
                  <label for="biography">biography</label>
                  <textarea
                    class="form-control"
                    name="bio"
                    id="biography"
                    rows="4"
                  ></textarea>
                </div>
                <div class="form-group">
                  <label for="city">city</label>
                  <input class="form-control" name="city" id="city" />
                </div>

                <div class="form-group">
                  <label for="image">add an image of yourself</label>
                  <input type="file" class="form-control-file" name="image" />
                </div>
                <button
                  type="submit"
                  class="btn btn-primary"
                  name="saveChanges"
                >
                  Save changes
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script>
      const SuccessCallback = function (position) {
        console.log(position.coords.longitude);
      };
      const errorCallback = function (error) {
        console.log(error);
      };
      navigator.geolocation.getCurrentPosition(SuccessCallback, errorCallback);
    </script>
    <script
      src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
      integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
      integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
      integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
